---
interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  faqs: FAQItem[];
  city: string;
}

const { faqs, city } = Astro.props;
---

<section class="faq">
  <div class="container">
    <h2>Frequently Asked Questions</h2>
    <div class="faq-list">
      {faqs.map((faq) => (
        <div class="faq-item">
          <h3 class="faq-question">{faq.question}</h3>
          <p class="faq-answer">{faq.answer}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .faq {
    padding: 4rem 0;
    background: var(--gray-100);
  }

  .faq h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: var(--gray-800);
  }

  .faq-list {
    max-width: 800px;
    margin: 0 auto;
  }

  .faq-item {
    background: white;
    padding: 2rem;
    border-radius: 0.5rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .faq-question {
    font-size: 1.25rem;
    color: var(--primary-color);
    margin-bottom: 1rem;
  }

  .faq-answer {
    color: var(--gray-800);
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .faq {
      padding: 3rem 0;
    }

    .faq h2 {
      font-size: 2rem;
    }

    .faq-item {
      padding: 1.5rem;
    }

    .faq-question {
      font-size: 1.125rem;
    }
  }
</style>
