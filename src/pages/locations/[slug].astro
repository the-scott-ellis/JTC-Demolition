---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import Services from '../../components/Services.astro';
import ContactForm from '../../components/ContactForm.astro';
import Testimonials from '../../components/Testimonials.astro';
import FAQ from '../../components/FAQ.astro';
import Schema from '../../components/Schema.astro';

export async function getStaticPaths() {
  const locations = await getCollection('locations');
  return locations.map(location => ({
    params: { slug: location.slug },
    props: { location },
  }));
}

const { location } = Astro.props;
const { Content } = await location.render();

// Build FAQ array from the location data and content
const faqs = [
  {
    question: `Do you offer same-day service in ${location.data.city}?`,
    answer: `Yes! We offer same-day junk removal service in most ${location.data.city} neighborhoods, subject to availability. Call us early in the day for the best chance of same-day pickup.`
  },
  {
    question: `What areas of ${location.data.city} do you serve?`,
    answer: `We serve all of ${location.data.city} including ${location.data.neighborhoods.slice(0, 3).join(', ')}, and surrounding areas.`
  },
  {
    question: `How much does junk removal cost in ${location.data.city}?`,
    answer: `Pricing varies based on the volume and type of items. We offer free estimates and transparent pricing with no hidden fees. Call us at ${location.data.phone} for a quote.`
  },
  {
    question: `Do you recycle in ${location.data.city}?`,
    answer: `Yes! We partner with local ${location.data.city} recycling facilities and donation centers. We recycle or donate items whenever possible to minimize landfill waste.`
  }
];
---

<Layout
  title={location.data.title}
  description={location.data.description}
  keywords={location.data.keywords}
  city={location.data.city}
  state={location.data.stateCode}
  phone={location.data.phone}
  address={location.data.address}
>
  <Schema
    city={location.data.city}
    state={location.data.stateCode}
    phone={location.data.phone}
    email={location.data.email}
    address={location.data.address}
    coordinates={location.data.coordinates}
    services={location.data.services}
  />

  <Hero
    city={location.data.city}
    state={location.data.stateCode}
    phone={location.data.phone}
  />

  <Services services={location.data.services} />

  <section class="content-section">
    <div class="container">
      <div class="prose">
        <Content />
      </div>
    </div>
  </section>

  <Testimonials testimonials={location.data.testimonials} />

  <FAQ faqs={faqs} city={location.data.city} />

  <ContactForm city={location.data.city} state={location.data.stateCode} />

  <footer class="footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-section">
          <h3>Contact Us</h3>
          <p><strong>Phone:</strong> {location.data.phone}</p>
          <p><strong>Email:</strong> {location.data.email}</p>
          <p><strong>Service Area:</strong> {location.data.serviceArea}</p>
        </div>
        <div class="footer-section">
          <h3>Hours</h3>
          <p>Monday - Sunday</p>
          <p>7:00 AM - 7:00 PM</p>
        </div>
        <div class="footer-section">
          <h3>Areas Served</h3>
          <ul>
            {location.data.neighborhoods.map(neighborhood => (
              <li>{neighborhood}</li>
            ))}
          </ul>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; {new Date().getFullYear()} Junk Removal Services. All rights reserved.</p>
      </div>
    </div>
  </footer>
</Layout>

<style>
  .content-section {
    padding: 4rem 0;
    background: white;
  }

  .prose {
    max-width: 800px;
    margin: 0 auto;
  }

  .prose :global(h2) {
    font-size: 2rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--gray-800);
  }

  .prose :global(h3) {
    font-size: 1.5rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--gray-800);
  }

  .prose :global(p) {
    margin-bottom: 1rem;
    line-height: 1.7;
    color: var(--text-color);
  }

  .prose :global(ul) {
    margin-bottom: 1rem;
    padding-left: 2rem;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
  }

  .prose :global(strong) {
    color: var(--gray-800);
    font-weight: 600;
  }

  .footer {
    background: var(--gray-800);
    color: white;
    padding: 3rem 0 1rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-section h3 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: white;
  }

  .footer-section p {
    margin-bottom: 0.5rem;
    color: #d1d5db;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
  }

  .footer-section li {
    margin-bottom: 0.5rem;
    color: #d1d5db;
  }

  .footer-bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid #4b5563;
    color: #9ca3af;
  }

  @media (max-width: 768px) {
    .content-section {
      padding: 3rem 0;
    }

    .prose :global(h2) {
      font-size: 1.5rem;
    }

    .footer {
      padding: 2rem 0 1rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
